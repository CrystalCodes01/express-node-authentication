<form id="form" method="post" action="/signup">
  <label for="full-name-input"> Your Name </label>
  <input  id="full-name-input" type="text" name="signupFullName"
      placeholder="Name">
  <br><br>

  <label for="username-input"> Username </label>
  <input  id="username-input" type="text" name="signupUsername"
      placeholder="Username">
  <br><br>

